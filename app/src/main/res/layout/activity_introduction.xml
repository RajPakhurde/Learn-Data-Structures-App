<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@color/background_blackblue"
    tools:context=".BasicActivitys.IntroductionActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/dark_blue"
                android:text="@string/introduction"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/text_color_light_blue"
                android:text="@string/introduction_description"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_light_blue"
                android:padding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/applications"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/text_color_light_blue"
                android:text="@string/important_role"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/text_color_light_blue"
                android:text="@string/algorithms"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>